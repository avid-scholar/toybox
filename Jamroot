project toybox ;

using gcc ;

project : requirements
    <include>libs
    <warnings-as-errors>on
    <warnings>on
    <cxxflags>-Wno-variadic-macros
    <toolset>gcc
;

lib ext_boost_datetime          : : <name>boost_date_time ;
lib ext_boost_thread            : : <name>boost_thread ;
lib ext_boost_asio              : : <name>boost_asio ;
lib ext_boost_system            : : <name>boost_system ;
lib ext_boost_random            : : <name>boost_random ;
lib ext_boost_regex             : : <name>boost_regex ;

make map.png : map.DOT : @draw_graph ;
actions draw_graph
{
   dot $(>) -Tpng > $(<)
}

alias map : map.png ;
