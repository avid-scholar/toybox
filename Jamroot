project toybox ;

using gcc ;

project : requirements
    <include>libs
    <warnings-as-errors>on
    <warnings>on
    <cxxflags>-Wno-variadic-macros
    <toolset>gcc
;

make map.DOT : notes/map : @map_draw ;
actions map_draw
{
   perl scripts/map.pl < $(>) > $(<)
}

make map.svg : map.DOT : @map_render ;
actions map_render
{
   dot -Tsvg < $(>) > $(<) ; test -L m && rm m; ln -s $(<) m
}
alias map : map.svg ;
always map ;
